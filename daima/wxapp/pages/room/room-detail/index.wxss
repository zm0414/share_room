.container {
  background-color: #f7f7f7;
  min-height: 100%;
  padding-bottom: 100rpx;
}

.scroll-view_H {
  width: 100%;
  white-space: nowrap;
}

.room-des-info {
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
  padding: 30rpx;
}

.label-title {
  font-size: 28rpx;
  color: #000;
  padding: 30rpx;
}

.room-info {
  font-size: 28rpx;
  color: #666;
  padding: 0 10rpx 10rpx 10rpx;
}

.des-imgs {
  width: 100%;
}

.des-imgs image {
  width: 100%;
}

.footer-box {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  box-shadow: 0 0 8rpx 0;
}


.footer-box .now-buy {
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #00bfe0;
  color: #fff;
  font-size: 36rpx;
}

.footer-box .now-appoint {
  text-align: center;
  height: 100%;
  width: 50%;
  line-height: 100rpx;
  background-color: #e64340;
  color: #fff;
  font-size: 36rpx;
  border: none;
  border-radius: 0px;
}

button[class="now-appoint"]::after {
  border: 0;
}

.share-img image {
  width: 90rpx;
  height: 90rpx;
}

.room-item {
  font-size: 30rpx;
  margin-bottom: 4rpx;
  flex: 1;
  overflow: hidden; /*超出部分隐藏*/
  white-space: nowrap; /*不换行*/
  text-overflow: ellipsis; /*超出部分文字以...显示*/
}

.room {
  background: #fff;
  margin-bottom: 15rpx;
  display: flex;
  padding: 30rpx;
}

.room .pic {
  width: 220rpx;
  height: 220rpx;
  margin-right: 20rpx;
}

.room-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.room-title-en {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.fx {
  display: flex;
}

.stock {
  align-items: center;
}

.room-stock {
  color: #ef8203;
  font-size: 26rpx;
}

.user-info {
  margin-bottom: 20rpx;
  align-items: center;
}

.user-info .info {
  margin-left: 10rpx;
}

.user-info .nick-name {
  font-size: 32rpx;
}

.create-time {
  font-size: 28rpx;
  color: #999;
}

.user-info image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.list-item {
  padding: 15rpx;
  border-bottom: 1rpx solid #eee;
}

.content {
  font-size: 30rpx;
}

.room .book-info {
  width: 500rpx;
}

button::after {
  border: none;
}


.appoint-time {
  width: 190rpx;
  height: 190rpx;
  text-align: center;
  background: #fff;
  border-radius: 6rpx;
  display: inline-block;
  vertical-align: middle;
  margin: 20rpx 20rpx 20rpx 0;
}

.appoint-time:first-child {
  margin-left: 20rpx;
}

.appoint-time:last-child {
  margin-right: 20rpx;
}

.appoint-time .week {
  font-size: 28rpx;
}

.appoint-time .day {
  font-size: 24rpx;
}

.appoint-time .btn {
  font-size: 24rpx;
  padding-left: 22rpx;
  padding-right: 22rpx;
  border-radius: 20rpx;
  display: inline;
  color: #34c0ee;
  border: #34c0ee 1rpx solid;
}

button[type=primary][plain] {
  color: #34c0ee;
  border-color: #34c0ee;
}

.appoint-time .info {
  height: 190rpx;
  width: 190rpx;
  text-align: center;
  vertical-align: middle;
  display: table-cell;
}
